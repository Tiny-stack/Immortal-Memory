<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.main.frontend.ui.AppController" 
          hgap="10" vgap="10" stylesheets="@style.css" 
          alignment="CENTER" 
          prefWidth="400" prefHeight="200">
    
   
    
    <Label text="Welcome" fx:id="welcomeLabel" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Button text="LOGIN" onAction="#handleLogin" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
